            <div class="row">
                <div class="col-lg-12">
                    <div id="menu1" style="height:717px;">
                        <h1>Employee Profile</h1>
                        <br>
                        <form method="post" action="/admin/send-email/<%= employee._id %>"
                              class="form-group-sm">
                            <h4>Name : <label id="name"><%= employee.empName %></label></h4>
                            <h4>Employee Id : <label id="name"><%= employee.empId %></label></h4>
                            <h4>Email : <label id="type"><%= employee.email %></label></h4>
                            <!--<h4>Password : <label id="password">1234</label></h4>-->
                            <h4>Date of Birth : <label
                                        id="dob"><%= moment(employee.dateOfBirth).format('MMMM Do YYYY'); %></label>
                            </h4>
                            <h4>Contact Number : <label id="contact"><%= employee.contactNumber %></label></h4>
                            
                            <h4>Role : <label id="designation"><% if(!employee.designation){%>
                                    <%="N/A"%>
                                    <%
                                    }
                                    else{%>
                                    <%=employee.designation%>
                                    <%}%></label></h4>
                        </form>
